{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "noEmit": false,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "babel/**/*",
    "cli/**/*",
    "config-helpers/**/*",
    "jest/jest.config.js",
    "typescript/tsconfig.json",
    "webpack/**/*",
    "types.ts",
    "index.ts",
    "defaultConfigPaths.ts",
    "eslint/base.eslint.config.js",
    "eslint.config.js",
    "jest.config.js",
  ],
}
